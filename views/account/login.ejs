<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<%- messages() %>
<form id="account" action="/account/login" method="post">
    <h2><%= title %></h2>
    <div>
        <label>Email: <input type="email" id="email" name="account_email" required></label>
        <label>Password: <input type="password" name="account_password" id="password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"></label>
        <button type="button" id="pswbtn">Show password</button>
    </div>
    <button type="submit">Login</button>

    <p>Don't have an account? <a href="/account/register">Register here</a></p>
</form>
<script src="/js/script.js"></script>