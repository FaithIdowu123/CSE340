<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<%- messages() %>

<form id="update_account" action="/account/update/info" method="post">
    <h2>Account info</h2>
    <div>
        <label>First Name: <input type="text" id="first_name" name="account_firstname" required value="<%= accountData.account_firstname %>"></label>
        <label>Last Name: <input type="text" id="last_name" name="account_lastname" required value="<%= accountData.account_lastname %>"></label>
        <label>Email: <input type="email" id="email" name="account_email" required value="<%= accountData.account_email %>"></label> 
    </div>
    <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
    <button type="submit" id="updatebutton" disabled>Update</button>
    
</form>

<form id="update_account" action="/account/update/password" method="post">
    <h2>Update Password</h2>
    <div>
        <label>New Password:
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
            <input type="password" name="new_password" id="password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        </label> 
        <button type="button" id="pswbtn">Show password</button>  
    </div>
    
    <button type="submit" id="updatepswbutton">Update Password</button>
    <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
</form>
<script src="/js/script.js"></script>
<script src="../../js/update.js"></script>