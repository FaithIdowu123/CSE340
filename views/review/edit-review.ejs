<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>
<%- messages() %>
<form id="add-review" action="/review/edit" method="post">
    
    <h2><%= title %></h2>
    <div>
        <label>Review: <textarea type="text" id="review_text" name="review_text" required ></textarea></label>
    </div>
    <input type="hidden" name="review_id" value="<%= reviews.review_id %>">
    <input type="hidden" name="inv_id" value="<%= reviews.inv_id %>">
    <input type="hidden" name="account_id" value="<%= reviews.account_id %>">
    <button type="submit" id="updatebutton" disabled>Edit Review</button>
</form>

<script>document.getElementById("review_text").value = "<%= reviews.review_text %>";</script>
<script src="../../js/update.js"></script>